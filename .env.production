# Production Environment Configuration
# Copy to .env and update with your actual values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_IP=your-server-ip-or-hostname
SERVER_PORT=3865
BACKEND_PORT=5983

# Database Configuration
POSTGRES_USER=gobad
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=gobad_db

# Backend Configuration
NODE_ENV=production
JWT_SECRET=your_jwt_secret_change_this_to_random_string
JWT_EXPIRES_IN=7d

# Frontend Configuration (Frontend will use this to connect to backend)
# Replace 'your-server-ip-or-hostname' with your actual server IP or domain
VITE_API_URL=http://your-server-ip-or-hostname:5983/api
